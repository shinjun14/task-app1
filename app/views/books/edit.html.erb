<h1 class="post-head-text">Editing Book</h1>
  <%= form_with model:@book, local:true do |f| %>
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="submit">
    <%= f.submit 'Update Book' %>
  </div>
  <%=link_to "Show", book_path(@book.id) %>
  |
  <a href="/books">Back</a>


  <% end %>